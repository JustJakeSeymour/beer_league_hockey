<h1>New Division Team</h1>

<%= form_with url: "/divisions/#{@division.id}/teams", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :won %>
  <%= form.number_field :won %>
  <%= form.label :lost %>
  <%= form.number_field :lost %>
  <%= form.label :shootout_loss %>
  <%= form.number_field :shootout_loss %>
  <%= form.hidden_field(:division_id, :value => @division.id)  %>
  <%= form.label :active_team %>
    <%= form.radio_button :active_team, 'true' %>
    <%=form.label :active_team, 'Yes', :value => 'true' %>
    <%= form.radio_button :active_team, 'false' %>
    <%=form.label :active_team, 'No', :value => 'false' %>
  <%= form.submit "Create Team" %>
<% end %>

<%= link_to "Divisions", "/divisions" %><%= link_to "Teams", "/teams" %>

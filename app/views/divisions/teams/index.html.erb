<h1><%= @division.name %> Teams:</h1>

<% @teams.each do |team| %>
  <h3><%= team.name %></h3>
  <ul>
    <li>Wins: <%= team.won %></li>
    <li>Losses: <%= team.lost %></li>
    <li>Shootout losses: <%= team.shootout_loss %></li>
  </ul>
  <%= button_to "Update #{team.name} Info", "/teams/#{team.id}/edit", method: :get  %>
<% end %>

<%= link_to "Create Team", "/divisions/#{@division.id}/teams/new" %>

<%= link_to "Divisions", "/divisions" %> <%= link_to "Teams", "/teams" %>

<%= link_to "Sort Alphabetical", "/divisions/#{@division.id}/teams?sort=alpha" %>
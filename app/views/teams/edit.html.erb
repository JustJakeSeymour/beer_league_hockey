<h1>Edit Team</h1>

<%= form_with url: "/teams/#{@team.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :won %>
  <%= form.number_field :won %>
  <%= form.label :lost %>
  <%= form.number_field :lost %>
  <%= form.label :shootout_loss %>
  <%= form.number_field :shootout_loss %>
  <%= form.label :active_team %>
    <%= form.radio_button :active_team, 'true' %>
    <%=form.label :active_team, 'Yes', :value => 'true' %>
    <%= form.radio_button :active_team, 'false' %>
    <%=form.label :active_team, 'No', :value => 'false' %>
  <%= form.submit "Update Team" %>
<% end %>

<hr>
<p><%= link_to "Division", "/divisions" %></p>
<p><%= link_to "Teams", "/teams" %></p>

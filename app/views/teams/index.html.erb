<h1>Beer League Teams</h1>

<% @teams.each do |team| %>
  <h3><%= team.name %></h3>
  <ul>
    <li>Wins: <%= team.won %></li>
    <li>Losses: <%= team.lost %></li>
    <li>Shootout Losses: <%= team.shootout_loss %></li>
  </ul>
  <%= butto, method: :get n_to "Update #{team.name} Info", "/teams/#{team.id}/edit", method: :get  %>
<% end %>

<%= link_to "Divisions", "/divisions" %>
